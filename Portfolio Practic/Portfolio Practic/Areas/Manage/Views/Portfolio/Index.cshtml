@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_ManageLayout.cshtml";
    
}

<div class="container-fluid">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <h1>Authors:</h1>
        <a asp-action="Create" asp-controller="Portfolio" class="btn btn-primary">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Id</th>
                <th scope="col">Title</th>
                <th scope="col">Subtitle</th>
                <th scope="col">Icon</th>
                <th scope="col">Status</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                
                <tr>
                    
                    <td>@item.Id</td>
                    <td>@item.Name</td>

                    <td>@item.Desc</td>
                    <td><img src="~/uploads/portfolio/@item.Image" style="max-width:100px" /></td>
                    <td>@item.IsDeleted</td>


                    <td>
                        <a asp-action="Edit" asp-controller="Portfolio" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-controller="Portfolio" asp-route-id="@item.Id" class="btn btn-danger btn-sweet-delete">Delete</a>
                        <a asp-action="Repair" asp-controller="Portfolio" asp-route-id="@item.Id" class="btn btn-Warning btn-sweet-delete">Repair</a>
                        <a asp-action="PermaDelete" asp-controller="Portfolio" asp-route-id="@item.Id" class="btn btn-danger btn-sweet-delete">Perma-Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>


